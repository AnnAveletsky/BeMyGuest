@model BMG.Models.AspNetUser

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="col-lg-10">
    <div class="jumbotron">
        <center><h1>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.SecondName)</h1></center>
        <div class="row">
            @foreach (var i in Model.Photos1)
            {
                <div class="col-lg-6">
                    @if (i.AspNetUser1 != null && i.Main == true)
                    {
                        @Html.Partial("~/Views/Photos/_Avatar.cshtml", i);
                    }
                </div>
            }
            <div class="col-lg-6">
                <table class="table">
                    <tr>
                        <th>
                            Email
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Номер
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Дата рождения
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.DataBirthday.Value.Day)
                            - @Html.DisplayFor(model => model.DataBirthday.Value.Month)
                            - @Html.DisplayFor(model => model.DataBirthday.Value.Year)
                        </td>
                    </tr>

                    <tr>
                        <th>
                            Статус
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Status)
                        </td>
                    </tr>
                    <tr>
                        <th colspan="2">
                            <center>
                                Подробная информация обо мне
                            </center>
                        </th>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <center>
                                @Html.DisplayFor(model => model.InfoAboutMe)
                            </center>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="btn-group btn-group-justified">
                                @Html.ActionLink("Редактирование профиля", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
                                @Html.ActionLink("Удаление профиля", "Delete", new { id = Model.Id }, new { @class = "btn btn-default" })
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
