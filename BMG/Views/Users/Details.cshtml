@model BMG.Models.AspNetUser

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="jumbotron">
    <center><h1>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.SecondName)</h1></center>

    <div class="row">
        <div class="col-lg-6">
            @foreach (var i in Model.Photos)
            {
                if (i.AspNetUser1 != null && i.Main == true)
                {
                    @Html.Partial("~/Views/Photos/_AvatarUser.cshtml", i);
                }
            }
        </div>
        <div class="col-lg-6">
            <table class="table">
                <tr>
                    <th>
                        Email
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <th>
                        Номер
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </td>
                </tr>
                <tr>
                    <th>
                        Дата рождения
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.DataBirthday.Value.Day)
                        - @Html.DisplayFor(model => model.DataBirthday.Value.Month)
                        - @Html.DisplayFor(model => model.DataBirthday.Value.Year)
                    </td>
                </tr>

                <tr>
                    <th>
                        Статус
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Status)
                    </td>
                </tr>
                <tr>
                    <th colspan="2">
                        <center>
                            Подробная информация обо мне
                        </center>
                    </th>
                </tr>
                <tr>
                    <td colspan="2">
                        <center>
                            @Html.DisplayFor(model => model.InfoAboutMe)
                        </center>
                    </td>
                </tr>
            </table>
        </div>
    </div>
