@model IEnumerable<BMG.Models.UsersDiscussion>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-lg-3 ">
                <div class="row">
                    <div class="col-lg-6">
                        @foreach (var i in item.AspNetUser.Photos1)
                        {
                            if (i.AspNetUser1 != null && i.Main == true)
                            {
                                @Html.Partial("~/Views/Photos/_Avatar.cshtml", i);
                            }
                        }
                    </div>
                    <div class="col-lg-6">
                        <h3>
                            от @Html.Partial("~/Views/Users/_LinkUser.cshtml", item.AspNetUser)
                            в @Html.DisplayFor(modelItem => item.DataTimeWrite)
                        </h3>
                    </div>
                    </div>
                </div>
            <div class="col-lg-9 ">
                @Html.DisplayFor(modelItem => item.Text)
            </div>
        </div>
    }
</div>
@{
    BMG.Models.UsersDiscussion comment = new BMG.Models.UsersDiscussion();
    comment.DataTimeWrite = DateTimeOffset.Now.DateTime;
    foreach (var i in Model)
    {
        if (i.AspNetUser.UserName==User.Identity.Name)
        {
            comment.AspNetUser = i.AspNetUser;
            comment.Discussion = i.Discussion;
            break;
        }
    }
}
@Html.Partial("~/Views/UsersDiscussions/_Create.cshtml",comment)