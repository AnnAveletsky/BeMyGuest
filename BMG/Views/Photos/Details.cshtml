@model BMG.Models.Photo

@{
    ViewBag.Title = "Подробнее о фоторафии";
}

<h2>Подробнее о фоторафии</h2>

<div>
    <div class="thumbnail">
        <img src="https://@Html.DisplayFor(model => model.Path)" alt="@Html.DisplayFor(model => model.Description)" />
        <div class="caption">
            <h3>@Html.DisplayFor(model => model.Description)</h3>
            <p>
                @Html.ActionLink("Подробнее", "Details", new { id = Model.Id })
            </p>
            @if (Model.AspNetUser.UserName == User.Identity.Name)
            {<p>
                @Html.ActionLink("Удаление", "Delete", new { id = Model.Id })
            </p>
            }
        </div>
    </div>
</div>
