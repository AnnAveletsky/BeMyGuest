@model IEnumerable<BMG.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @foreach (var item in Model)
    {
        if (item != null)
        {
            <div class="col-lg-2">
                <div class="thumbnail">
                    @Html.DisplayFor(modelItem => item.Name)
                    <img src="https://@Html.DisplayFor(modelItem => item.Photo.Path)" alt="@Html.DisplayFor(modelItem => item.Photo.Description)" width="100%">
                    @Html.DisplayFor(modelItem => item.City.Name)
                    @Html.DisplayFor(modelItem => item.Country.Name)
                    @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                    @if (item.AspNetUser.UserName == User.Identity.Name)
                    {
                        @Html.ActionLink("Редактирование", "Edit", new { id = item.Id })
                        @Html.ActionLink("Удаление", "Delete", new { id = item.Id })
                    }
                </div>
            </div>
        }
    }
</div>