@model IEnumerable<BMG.Models.Traveling>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 thumbnail">
            
                    
              
            <h2>
                @Html.Partial("~/Views/Travelings/_LinkTraveling.cshtml", item)
            </h2>
            @Html.Partial("~/Views/Photos/_AvatarTraveling.cshtml", item)
            @if (item.DateTimeComing != null)
            {
                <h4>
                    с @Html.DisplayFor(modelItem => item.DateTimeComing)
                </h4>
            }
            @if (item.DateTimeDeparture != null)
            {
                <h4>
                    по @Html.DisplayFor(modelItem => item.DateTimeDeparture)
                </h4>
            }
            <p>
                @Html.DisplayFor(modelItem => item.Description)
            </p>
            Путешественник: @Html.Partial("~/Views/Users/_LinkUser.cshtml", item.AspNetUser)
            <p>
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                @if (item.AspNetUser.UserName == User.Identity.Name)
                {
                    @Html.ActionLink("Редактирование", "Edit", new { id = item.Id })
                    <br />
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                }
            </p>
        </div>
    }
</div>