@model IEnumerable<BMG.Models.Traveling>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-6 thumbnail">
            @foreach (var i in item.Photos)
            {
                if (i.Group != null && i.Main == true)
                {
                    @Html.Partial("~/Views/Photos/_Avatar.cshtml", i);
                }
            }
            <h2>
               @Html.Partial("~/Views/Travelings/_LinkTraveling.cshtml", item);
            </h2>
            <h4>
                с @Html.DisplayFor(modelItem => item.DateTimeComing)
                по @Html.DisplayFor(modelItem => item.DateTimeDeparture)
            </h4>
            <p>
                @Html.DisplayFor(modelItem => item.Description)
            </p>
            Путешественник:@Html.DisplayForModel(item.AspNetUser.FirstName) @Html.DisplayForModel(item.AspNetUser.SecondName)
            <p>
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                @if (item.AspNetUser.UserName == User.Identity.Name)
                {
                    @Html.ActionLink("Редактирование", "Edit", new { id = item.Id })
                    <br />
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                }
            </p>
        </div>
    }
</div>