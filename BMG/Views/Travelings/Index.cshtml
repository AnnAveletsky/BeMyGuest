@model IEnumerable<BMG.Models.Traveling>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
    <div class="thumbnail">
        <h3>
            @Html.DisplayFor(modelItem => item.Name)
        </h3>
        Страна  @Html.DisplayFor(modelItem => item.Country.Name)
        Город @Html.DisplayFor(modelItem => item.City.Name)
        <div class="row">
            <div class="col-lg-2">
                <img src="https://@Html.DisplayFor(modelItem => item.Photo.Path)" width="100%" />
            </div>
            <div class="col-lg-10">
                <center>
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                </center>

                <div class="caption">
                    Дата приезда  @Html.DisplayFor(modelItem => item.DateTimeComing)
                    Дата отезда    @Html.DisplayFor(modelItem => item.DateTimeDeparture)
                    <br />

                </div>
            </div>
            <div class="col-lg-2">


            </div>
        </div>
        @if (item.AspNetUser.FirstName == null || item.AspNetUser.SecondName == null)
        {
            <h5>от @Html.ActionLink(item.AspNetUser.UserName, "/../Users/Details", new { id = item.IdUserCreate })</h5>
        }
        else
        {
            <h5>от @Html.ActionLink(item.AspNetUser.FirstName + " " + item.AspNetUser.SecondName, "/../Users/Details", new { id = item.IdUserCreate })</h5>
        }
        @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
        @if (User.Identity.Name == item.AspNetUser.UserName)
        {
            @Html.ActionLink("Редактирование", "Edit", new { id = item.Id })

        }
    </div>
}