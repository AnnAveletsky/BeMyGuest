@model IEnumerable<BMG.Models.Occasion>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-6 thumbnail">
            <h4>
                с @Html.DisplayForModel(item.ArrivalDate)
                по @Html.DisplayForModel(item.CheckOut)
                Путешественник: @Html.DisplayForModel(item.AspNetUser1.FirstName) @Html.DisplayForModel(item.AspNetUser1.SecondName)
                Принимающий гостя:@Html.DisplayForModel(item.AspNetUser.FirstName) @Html.DisplayForModel(item.AspNetUser.SecondName)
            </h4>
            <h5>Место   @Html.DisplayForModel(item.Place.IdUser)</h5>
            <p>@Html.DisplayForModel(item.Description)
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                @if (item.AspNetUser1.UserName == User.Identity.Name)
                {
                    @Html.ActionLink("Редактирование", "Edit", new { id = item.Id })
                }
            </p>
        </div>
    }
</div>