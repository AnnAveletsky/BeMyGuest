@model IEnumerable<BMG.Models.Occasion>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        if (item != null)
        {
            <div class="col-lg-6">
                <div class="thumbnail">
                    @if (item.Traveling != null)
                    {
                        @Html.DisplayFor(modelItem => item.Traveling.Name)
                    }
                    @Html.DisplayFor(modelItem => item.Description)
                    <img src="https://@Html.DisplayFor(modelItem => item.AspNetUser.Photo.Path)" alt="@Html.DisplayFor(modelItem => item.AspNetUser.Photo.Description)" width="50%">
                    <img src="https://@Html.DisplayFor(modelItem => item.AspNetUser1.Photo.Path)" alt="@Html.DisplayFor(modelItem => item.AspNetUser1.Photo.Description)" width="50%">
                    путешественик @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                    едет к @Html.DisplayFor(modelItem => item.AspNetUser1.Email)
                    @if (item.Place.IdUser != null)
                    {
                        <p>
                            в @Html.DisplayFor(modelItem => item.Place.IdUser)
                        </p>
                    }
                    @Html.ActionLink("Подробнее", "Details", new { id = item.Id })
                    @if (item.AspNetUser.UserName == User.Identity.Name)
                    {
                        @Html.ActionLink("Редактирование", "Edit", new { id = item.Id })
                        @Html.ActionLink("Удаление", "Delete", new { id = item.Id })
                    }

                </div>
            </div>
        }
    }
</div>
